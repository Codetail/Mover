<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.CardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/card_background_light"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <codetail.widget.FrameLayoutCompat
        android:layout_width="@dimen/thumbnail_width"
        android:layout_height="@dimen/thumbnail_height"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/card_video_item_thumbnails"
            android:layout_width="@dimen/thumbnail_width"
            android:layout_height="@dimen/thumbnail_height"
            android:background="#d4d4d4"
            android:contentDescription="@string/app_name"
            />

        <codetail.text.RobotoTextView
            android:id="@+id/card_video_item_duration"
            android:background="@drawable/duration_bg_borders"
            android:layout_gravity="right|bottom"
            android:layout_margin="2dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/duration_text_color"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="Roboto-Regular"
            tools:text="12:40"
            />

    </codetail.widget.FrameLayoutCompat>

    <TextView
        android:id="@+id/card_video_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:maxLines="3"
        android:textSize="14sp"
        android:textColor="@color/primary_text_default_material_light"
        android:fontFamily="sans-serif-medium"
        app:fontFamily="Roboto-Medium"
        tools:text="WatchMe the best in the world!\nLove us!"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/card_video_item_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="bottom"
        android:textSize="12sp"
        android:textColor="@color/secondary_text_default_material_light"
        android:fontFamily="sans-serif"
        app:fontFamily="Roboto-Regular"
        tools:text="Ozodrukh"
        tools:ignore="RtlHardcoded" />


    <TextView
        android:id="@+id/card_video_item_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="bottom"
        android:textSize="12sp"
        android:textColor="@color/secondary_text_default_material_light"
        android:fontFamily="sans-serif"
        app:fontFamily="Roboto-Regular"
        tools:text="12.000.000 views"
        tools:ignore="RtlHardcoded" />

</io.codetail.widget.CardLayout>