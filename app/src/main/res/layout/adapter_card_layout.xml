<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.CardLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:support="http://schemas.android.com/apk/res-auto"
    style="@style/CardView.Light"
    support:cl_divider="1dp"
    support:cl_dividerColor="?dividerColor"
    support:cl_dividersOffset="16dp"
    support:contentPaddingTop="16dp"
    support:contentPaddingLeft="16dp"
    support:contentPaddingRight="16dp"
    android:layout_marginTop="8dp"
    android:id="@+id/cardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <codetail.text.RobotoTextView
        android:id="@+id/cardTitle"
        support:clLayout_dividerOffset="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="1dp"
        android:textSize="18sp"
        android:textColor="@color/primary_text_default_material_light"
        support:fontFamily="Roboto-Bold"
        />

    <TextView
        android:id="@+id/showMoreButton"
        support:clLayout_dividerOffset="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_item_show_more_button"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="?colorAccent"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        support:clLayout_dividerEnabled="false"
        />

</io.codetail.widget.CardLinearLayout>