<?xml version="1.0" encoding="utf-8"?>
<codetail.widget.FrameLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="@dimen/toolbar_height"
        android:paddingBottom="8dp"
        android:overScrollMode="always"
        android:visibility="gone"
        />

    <codetail.widget.FloatingActionButton
        android:id="@+id/fab_scroll_up"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|right"
        app:actionColor="?colorAccent"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        />

    <codetail.widget.circular.CircularProgressBar
        android:id="@+id/content_progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        />


</codetail.widget.FrameLayoutCompat>
